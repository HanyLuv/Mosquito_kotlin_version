<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_round_background"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/widget_today_mosquito_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 모기 예보"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/widget_today_mosquito_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018년 6월 15일"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_today_mosquito_date_layout"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/widget_today_mosquito_value_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_today_mosquito_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="16sp" />


            <FrameLayout
                android:id="@+id/divider_view"
                android:layout_width="55dp"
                android:layout_height="2dp"
                android:background="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1000"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_today_mosquito_step_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/widget_today_mosquito_value_layout"
            android:text="없음"
            android:textSize="25dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앗! 오늘의 모기 예보는 아직 인가봐요!" />


    </LinearLayout>

</RelativeLayout>