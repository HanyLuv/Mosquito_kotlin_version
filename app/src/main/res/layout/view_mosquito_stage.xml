<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 모기 예보 "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/today_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0000년 0월 00일"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/mosquito_stage_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2단계"
            android:textSize="20sp"
            android:visibility="gone" />


    </LinearLayout>

    <include
        android:id="@+id/view_mosquito_today_state_bar"
        layout="@layout/view_mosquito_today_state_bar" />


    <View
        android:id="@+id/divider_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/view_mosquito_today_state_bar"
        android:layout_marginTop="5dp"
        android:background="#D7DBDD" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="행동수칙 및 방제법 "
        android:textSize="15sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEDED"
        android:padding="5dp"
        android:text="개인"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/personal_behavior_information_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:text="행동요령"
        android:textSize="14sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEDED"
        android:padding="5dp"
        android:text="기관 / 사회"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/public_behavior_information_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:text="행동요령"
        android:textSize="14sp" />
</LinearLayout>