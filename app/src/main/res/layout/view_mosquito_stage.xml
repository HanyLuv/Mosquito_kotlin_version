<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 모기 예보 "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/today_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2018년 6월 21일"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/mosquito_stage_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2단계"
            android:textSize="20sp"
            android:visibility="gone" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/today_mosquito_value_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <View
                android:id="@+id/today_mosquito_value_bar_bg_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="#F0F3F4" />

            <View
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="#F5B7B1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:text="492.7"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/today_mosquito_value_bar_bg_view"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/today_mosquito_value_bar_bg_view"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/today_mosquito_value_bar_bg_view"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="500"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/today_mosquito_value_bar_bg_view"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="1000"
                    android:textSize="11sp" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="모기발생단계"
            android:textSize="9sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="모기활동지수"
            android:textSize="9sp" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="행동수칙 및 방제법 "
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7DBDD"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="개인 "
        android:textSize="18sp" />


    <TextView
        android:id="@+id/personal_behavior_information_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="적극적 행동 요령 설명!! "
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7DBDD"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="기관 / 사회 "
        android:textSize="18sp" />


    <TextView
        android:id="@+id/public_behavior_information_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="적극적 행동 요령 설명!! "
        android:textSize="16sp" />
</LinearLayout>