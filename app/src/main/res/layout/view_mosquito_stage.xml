<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="모기 발생 단계 : 2 단계" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="행동수칙 및 방제법 " />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7DBDD"
        android:text="개인 " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D7DBDD"
                android:text="방어적 행동 요령" />

            <TextView
                android:id="@+id/defensive_behavior_information_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="적극적 행동 요령 설명!! " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D7DBDD"
                android:text="적극적 행동 요령" />

            <TextView
                android:id="@+id/active_behavior_information_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="적극적 행동 요령 설명!! " />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7DBDD"
        android:text="기관/사회 " />

    <TextView
         android:id="@+id/public_behavior_information_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기관/사회 설명이다 " />
</LinearLayout>