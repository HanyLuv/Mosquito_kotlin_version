<LinearLayout android:id="@+id/toolbar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_color"
    android:gravity="center"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


 <TextView
     android:textColor="@color/tab_selector"
        android:id="@+id/videotab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/explanation_tabbar_padding"
        android:text="@string/explanation_tab_video_title"
        android:textAllCaps="true"
        android:textStyle="bold" />


    <TextView
        android:textColor="@color/tab_selector"
        android:id="@+id/behaviortab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/explanation_tabbar_padding"
        android:text="@string/explanation_tab_behavior_title"
        android:textAllCaps="true"
        android:textStyle="bold" />


    <TextView
        android:textColor="@color/tab_selector"
        android:id="@+id/situationtab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/explanation_tabbar_padding"
        android:text="@string/explanation_tab_situation_title"
        android:textAllCaps="true"
        android:textStyle="bold" />

</LinearLayout>